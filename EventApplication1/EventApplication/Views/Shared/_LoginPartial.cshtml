@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">
    <li>@Html.ActionLink("Find an Event", "Index", "Event", routeValues: null, htmlAttributes: new { id = "FindEvent" }) </li>
    <li>@Html.ActionLink("Organize an Event", "Create", "Event", routeValues: null, htmlAttributes: new { id = "OrganizeEvent" }) </li>
    <li>@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
    <li>@Html.ActionLink("Tickets Ordered", "Index", "Order", routeValues: null, htmlAttributes: new { id = "TicketsOrdered" }) </li>
    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
</ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">

    <li>@Html.ActionLink("Find an Event", "Event", "Event", routeValues: null, htmlAttributes: new { id = "FindEvent" }) </li>
    <li>@Html.ActionLink("Organize an Event", "Event", "Event", routeValues: null, htmlAttributes: new { id = "OrganizeEvent" }) </li>
    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>

</ul>
}
